---
import Badge from '../ui/Badge.astro';
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';
import Section from '../ui/Section.astro';

interface CTA {
  label: string;
  href: string;
}

interface Props {
  eyebrow?: string;
  title: string;
  description: string;
  points?: string[];
  cta?: CTA;
  reverse?: boolean;
  visualTitle?: string;
  visualCopy?: string;
}

const {
  eyebrow,
  title,
  description,
  points = [],
  cta,
  reverse = false,
  visualTitle = 'Preview Panel',
  visualCopy = 'Use this space for a screenshot, metrics stack, or service deliverables.'
} = Astro.props;
---

<Section variant="muted">
  <div class={`grid items-center gap-10 lg:grid-cols-2 ${reverse ? 'lg:[&>*:first-child]:order-2' : ''}`}>
    <div class="space-y-5">
      {eyebrow && <Badge mono>{eyebrow}</Badge>}
      <h2>{title}</h2>
      <p>{description}</p>
      {points.length > 0 && (
        <ul class="space-y-2 text-slate-700">
          {points.map((point) => <li>â€¢ {point}</li>)}
        </ul>
      )}
      {cta && (
        <div class="pt-2">
          <Button href={cta.href}>{cta.label}</Button>
        </div>
      )}
    </div>

    <Card class="bg-gradient-to-br from-white to-slate-50 p-8">
      <p class="label-mono text-slate-500">Visual</p>
      <h3 class="mt-3 text-2xl">{visualTitle}</h3>
      <p class="mt-3 text-sm text-slate-600">{visualCopy}</p>
      <div class="mt-6 grid grid-cols-2 gap-3">
        <div class="h-20 rounded-lg bg-white shadow-sm"></div>
        <div class="h-20 rounded-lg bg-white shadow-sm"></div>
      </div>
    </Card>
  </div>
</Section>
