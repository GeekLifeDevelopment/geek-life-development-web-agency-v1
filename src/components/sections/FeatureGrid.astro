---
import Heading from '../ui/Heading.astro';
import Card from '../ui/Card.astro';
import Section from '../ui/Section.astro';

type Feature = {
  title: string;
  description: string;
  icon?: string;
};

interface Props {
  eyebrow?: string;
  title: string;
  subtitle?: string;
  items: Feature[];
}

const { eyebrow, title, subtitle, items } = Astro.props;
---

<Section>
  <div class="space-y-10">
    <Heading eyebrow={eyebrow} title={title} subtitle={subtitle} />
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <Card>
          <p class="text-2xl" aria-hidden="true">{item.icon ?? 'âœ¨'}</p>
          <h3 class="mt-4 text-xl font-semibold">{item.title}</h3>
          <p class="mt-3 text-sm leading-relaxed text-slate-600">{item.description}</p>
        </Card>
      ))}
    </div>
  </div>
</Section>
