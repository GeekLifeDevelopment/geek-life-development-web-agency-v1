---
import Button from '../ui/Button.astro';
import Section from '../ui/Section.astro';

interface CTA {
  label: string;
  href: string;
}

interface Props {
  title: string;
  subtitle: string;
  primaryCta: CTA;
  secondaryCta?: CTA;
  accent?: boolean;
}

const { title, subtitle, primaryCta, secondaryCta, accent = true } = Astro.props;
---

<Section class="relative overflow-hidden">
  {accent && (
    <div
      class="pointer-events-none absolute right-[-120px] top-[-140px] h-[340px] w-[340px] rounded-full opacity-25 blur-3xl"
      style="background: linear-gradient(135deg, #2563EB 0%, #6D28D9 100%);"
      aria-hidden="true"
    ></div>
  )}

  <div class="relative max-w-4xl space-y-6">
    <h1 class="text-4xl leading-tight md:text-6xl">{title}</h1>
    <p class="max-w-3xl text-base leading-relaxed text-[var(--color-neutral)] md:text-lg">{subtitle}</p>
    <div class="flex flex-wrap gap-3 pt-2">
      <Button href={primaryCta.href} size="lg">{primaryCta.label}</Button>
      {secondaryCta && (
        <Button href={secondaryCta.href} variant="secondary" size="lg">
          {secondaryCta.label}
        </Button>
      )}
    </div>
  </div>
</Section>
