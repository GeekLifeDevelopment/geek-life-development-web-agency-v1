---
import Card from './ui/Card.astro';
import Button from './ui/Button.astro';

type PricingPlan = {
  name: string;
  price: string;
  summary: string;
  features: string[];
  featured?: boolean;
};

interface Props {
  plans?: PricingPlan[];
}

const {
  plans = [
    {
      name: 'Starter',
      price: '$1,500',
      summary: 'Great for new businesses needing a clean, credible web presence.',
      features: ['Up to 5 pages', 'Basic technical SEO', '1 round of revisions']
    },
    {
      name: 'Growth',
      price: '$3,500',
      summary: 'Built for teams ready to improve lead flow and conversion rate.',
      features: ['Up to 12 pages', 'Conversion-focused copy structure', 'Analytics + event tracking'],
      featured: true
    },
    {
      name: 'Scale',
      price: 'Custom',
      summary: 'For businesses with advanced funnels, content, or multiple service lines.',
      features: ['Full strategy workshop', 'Custom integrations', 'Ongoing optimization support']
    }
  ]
} = Astro.props;
---

<div class="grid gap-6 lg:grid-cols-3">
  {
    plans.map((plan) => (
      <Card class={plan.featured ? 'border-blue-200 ring-2 ring-blue-100' : ''}>
        <h3 class="font-heading text-xl font-semibold text-slate-900">{plan.name}</h3>
        <p class="mt-2 text-3xl font-bold text-slate-900">{plan.price}</p>
        <p class="mt-2 text-sm text-slate-600">{plan.summary}</p>
        <ul class="mt-5 space-y-2 text-sm text-slate-700">
          {plan.features.map((feature) => <li>â€¢ {feature}</li>)}
        </ul>
        <Button href="/contact" class="mt-6 w-full" variant={plan.featured ? 'primary' : 'secondary'}>
          Get Started
        </Button>
      </Card>
    ))
  }
</div>