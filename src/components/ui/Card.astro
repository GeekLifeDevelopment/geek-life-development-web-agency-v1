---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;
---

<article
  class={`rounded-xl border border-slate-200/60 bg-white p-6 shadow-sm transition duration-200 ${
    hover ? 'hover:-translate-y-0.5 hover:shadow-md' : ''
  } ${className}`}
>
  <slot />
</article>