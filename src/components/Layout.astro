---
import monogramUrl from '../assets/brand/monogram-gld.svg?url';
import Footer from './Footer.astro';
import Header from './Header.astro';
import SEO from './SEO.astro';
import { siteConfig } from '../data/site';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  noindex?: boolean;
}

const { title, description, noindex = false } = Astro.props;

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: siteConfig.name,
  url: siteConfig.url,
  email: siteConfig.email,
  telephone: siteConfig.phone,
  address: {
    '@type': 'PostalAddress',
    addressLocality: siteConfig.location,
    addressCountry: 'US'
  },
  areaServed: 'United States',
  description: siteConfig.description
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={monogramUrl} />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={description} noindex={noindex} />
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </head>
  <body class="bg-light text-dark">
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>