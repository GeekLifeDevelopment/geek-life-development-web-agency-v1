---
import { getCollection, render } from 'astro:content';
import Layout from '../../components/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Heading from '../../components/ui/Heading.astro';
import Section from '../../components/ui/Section.astro';
import { getWorkImages } from '../../data/workImages';

export function getStaticPaths() {
  return getCollection('work').then((entries) =>
    entries.map((entry) => ({
      params: { slug: entry.slug },
      props: { entry }
    }))
  );
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const nextSteps = entry.data.nextSteps ?? [];
const images = getWorkImages(entry.slug);
---

<Layout title={`${entry.data.title} | Geek Life Development`} description={entry.data.summary} ogType="article">
  <Section>
    <div class="max-w-4xl space-y-6">
      <h1 class="text-4xl md:text-6xl">{entry.data.title}</h1>
      <p class="max-w-3xl text-base text-[var(--color-neutral)] md:text-lg">{entry.data.summary}</p>
      <div class="flex flex-wrap gap-3">
        <a
          href={entry.data.websiteUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex h-12 items-center justify-center rounded-xl border border-slate-200 px-6 text-base font-medium text-[var(--color-dark)] transition hover:-translate-y-0.5 hover:shadow-soft hover:no-underline"
        >
          Visit site
        </a>
        <Button href="/contact" size="lg">Get a quote</Button>
      </div>
    </div>
  </Section>

  <Section variant="muted">
    {images && (
      <Card hover={false} class="mb-8 p-6 md:p-8">
        <div class="mb-5 flex items-center justify-between gap-3">
          <h2 class="text-xl md:text-2xl">Project preview</h2>
          <p class="text-xs font-medium uppercase tracking-wide text-slate-500">Desktop + mobile</p>
        </div>

        <div class="grid gap-4 md:grid-cols-[minmax(0,2fr)_minmax(0,1fr)] md:items-end">
          <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
            <img
              src={images.desktop.src}
              alt={`${images.alt} desktop preview`}
              class="h-auto w-full"
              loading="eager"
            />
          </div>

          <div class="mx-auto w-full max-w-[220px] rounded-[2rem] border border-slate-300 bg-slate-900 p-2 shadow-md md:mx-0">
            <div class="mx-auto mb-2 h-1.5 w-16 rounded-full bg-slate-700"></div>
            <div class="overflow-hidden rounded-[1.5rem] border border-slate-200 bg-white">
              <img
                src={images.mobile.src}
                alt={`${images.alt} mobile preview`}
                class="h-auto w-full"
                loading="lazy"
              />
            </div>
            <div class="mx-auto mt-2 h-1 w-12 rounded-full bg-slate-600"></div>
          </div>
        </div>
      </Card>
    )}

    <Card hover={false} class="p-8">
      <article class="prose prose-slate max-w-none">
        <Content />
      </article>
    </Card>
  </Section>

  {nextSteps.length > 0 && (
    <Section>
      <Heading
        eyebrow="Next steps"
        title="What comes after launch"
        subtitle="Typical follow-up improvements that keep momentum moving forward."
      />
      <Card class="mt-8" hover={false}>
        <ul class="space-y-2 text-sm text-slate-700">
          {nextSteps.map((step) => <li>â€¢ {step}</li>)}
        </ul>
      </Card>
    </Section>
  )}

  <Section variant="dark">
    <div class="space-y-6 text-center">
      <h2 class="text-white">Want something like this for your business?</h2>
      <div class="flex flex-wrap justify-center gap-3">
        <Button href="/contact" size="lg">Get a quote</Button>
        <Button href="/pricing" size="lg" variant="secondary">See pricing</Button>
      </div>
    </div>
  </Section>
</Layout>