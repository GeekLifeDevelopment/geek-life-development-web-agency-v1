---
import Layout from '../components/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Section from '../components/ui/Section.astro';
import { caseStudies } from '../data/caseStudies';
---

<Layout title="Work | Geek Life Development" description="Selected website and growth projects for service businesses.">
  <Section>
    <div class="max-w-3xl space-y-4">
      <h1>Work</h1>
      <p>Case studies from recent projects focused on lead generation, conversion, and stronger positioning.</p>
    </div>
  </Section>

  <Section class="bg-white">
    <div class="grid gap-6 md:grid-cols-2">
      {
        caseStudies.map((study) => (
          <Card class="flex h-full flex-col">
            <p class="text-xs font-semibold uppercase tracking-wide text-blue-700">{study.industry}</p>
            <h2 class="mt-2 text-2xl">{study.title}</h2>
            <p class="mt-3">{study.summary}</p>
            <div class="mt-4 flex flex-wrap gap-2 text-xs text-slate-600">
              {study.services.map((service) => <span class="rounded-full bg-slate-100 px-3 py-1">{service}</span>)}
            </div>
            <Button href={`/work/${study.slug}`} class="mt-6 w-fit" variant="ghost">
              Read Case Study
            </Button>
          </Card>
        ))
      }
    </div>
  </Section>
</Layout>