---
import Layout from '../components/Layout.astro';
import CTASection from '../components/sections/CTASection.astro';
import Hero from '../components/sections/Hero.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Section from '../components/ui/Section.astro';
import { caseStudies } from '../data/caseStudies';
---

<Layout title="Work | Geek Life Development" description="Selected projects focused on positioning clarity, conversion, and maintainable growth systems.">
  <Hero
    title="Selected work and outcomes"
    subtitle="A snapshot of recent engagements where we improved trust, conversion flow, and performance for service businesses."
    primaryCta={{ label: 'Get a quote', href: '/contact' }}
    secondaryCta={{ label: 'Our services', href: '/services' }}
    accent={false}
  />

  <Section class="bg-white">
    <div class="grid gap-6 md:grid-cols-2">
      {
        caseStudies.map((study) => (
          <Card class="flex h-full flex-col">
            <p class="text-xs font-semibold uppercase tracking-wide text-blue-700">{study.industry}</p>
            <h2 class="mt-2 text-2xl">{study.title}</h2>
            <p class="mt-3">{study.summary}</p>
            <div class="mt-4 flex flex-wrap gap-2 text-xs text-slate-600">
              {study.services.map((service) => <span class="rounded-full bg-slate-100 px-3 py-1">{service}</span>)}
            </div>
            <Button href={`/work/${study.slug}`} class="mt-6 w-fit" variant="ghost">
              Read Case Study
            </Button>
          </Card>
        ))
      }
    </div>
  </Section>

  <CTASection
    title="Want your project featured next?"
    subtitle="Letâ€™s build a site system that supports your next growth phase."
  />
</Layout>