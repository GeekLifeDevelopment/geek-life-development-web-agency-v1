---
import { getCollection, render } from 'astro:content';
import Layout from '../../components/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Section from '../../components/ui/Section.astro';

export function getStaticPaths() {
  return getCollection('resources', ({ data }) => !data.draft).then((entries) =>
    entries.map((entry) => ({
      params: { slug: entry.slug },
      props: { entry }
    }))
  );
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const formatDate = (value: Date) =>
  value.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
---

<Layout
  title={`${entry.data.title} | Geek Life Development`}
  description={entry.data.description}
  ogType="article"
>
  <Section>
    <article class="max-w-3xl space-y-6">
      {entry.data.hero?.eyebrow && <p class="label-mono text-slate-500">{entry.data.hero.eyebrow}</p>}
      <h1 class="text-4xl md:text-6xl">{entry.data.title}</h1>

      <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-slate-600">
        <p>Published {formatDate(entry.data.pubDate)}</p>
        {entry.data.updatedDate && <p>Updated {formatDate(entry.data.updatedDate)}</p>}
      </div>

      {entry.data.tags && entry.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {entry.data.tags.map((tag) => <Badge variant="neutral">{tag}</Badge>)}
        </div>
      )}
    </article>
  </Section>

  <Section variant="muted">
    <Card hover={false} class="p-8 md:p-10">
      <article class="article-content mx-auto w-full max-w-3xl">
        <Content />
      </article>
    </Card>
  </Section>

  <Section variant="dark">
    <div class="space-y-6 text-center">
      <h2 class="text-white">Want help with your website?</h2>
      <div class="flex flex-wrap justify-center gap-3">
        <Button href="/contact" size="lg">Get a quote</Button>
        <Button href="/pricing" size="lg" variant="secondary">See pricing</Button>
      </div>
    </div>
  </Section>
</Layout>
