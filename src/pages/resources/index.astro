---
import { getCollection } from 'astro:content';
import Layout from '../../components/Layout.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Section from '../../components/ui/Section.astro';

const posts = (await getCollection('resources', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

const formatDate = (value: Date) =>
  value.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
---

<Layout
  title="Resources | Geek Life Development"
  description="Practical guides for small businesses — websites, pricing, and what to do next."
>
  <Section>
    <div class="max-w-4xl space-y-6">
      <h1 class="text-4xl md:text-6xl">Resources</h1>
      <p class="max-w-3xl text-base text-[var(--color-neutral)] md:text-lg">
        Practical guides for small businesses — websites, pricing, and what to do next.
      </p>
      <div class="flex flex-wrap gap-3">
        <Button href="/contact" size="lg">Get a quote</Button>
      </div>
      <p class="text-sm text-slate-600">
        Prefer updates in your reader?
        <a href="/rss.xml" class="font-medium">Subscribe via RSS</a>
      </p>
    </div>
  </Section>

  <Section variant="muted">
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <Card class="flex h-full flex-col">
            <p class="text-xs font-medium uppercase tracking-wide text-slate-500">{formatDate(post.data.pubDate)}</p>
            <h2 class="mt-3 text-2xl">
              <a href={`/resources/${post.slug}`} class="text-inherit hover:no-underline hover:text-[var(--color-accent)]">
                {post.data.title}
              </a>
            </h2>
            <p class="mt-3 text-sm text-slate-600">{post.data.description}</p>
            {post.data.tags && post.data.tags.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {post.data.tags.map((tag) => <Badge variant="neutral">{tag}</Badge>)}
              </div>
            )}
            <div class="mt-6">
              <Button href={`/resources/${post.slug}`} variant="secondary" size="sm">Read article</Button>
            </div>
          </Card>
        ))
      }
    </div>

    <p class="mt-10 text-sm text-slate-600">Serving Ozaukee County & the Milwaukee area + remote.</p>
  </Section>
</Layout>
